<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_picture">
    <RelativeLayout 
        android:id="@+id/myself_myName_layout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff">
        <lib.lhh.fiv.library.FrescoImageView
            android:id="@+id/myself_myName_layout_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/test_picture"/>
        <TextView 
            android:id="@+id/myself_myName_layout_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myself_myName_layout_img"
            android:text="kakashi"
            android:textColor="@color/dark_deep"
            android:textSize="24sp"
            android:layout_marginBottom="5dp"/>
        <TextView 
            android:id="@+id/myself_myName_layout_gexingqianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myself_myName_layout_img"
            android:layout_below="@id/myself_myName_layout_nickname"
            android:textSize="15sp"
            android:text="你刚才说什么？"
            android:textColor="@color/dark_normal"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/myself_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/myself_myName_layout_">
        
    	<RelativeLayout 
        	android:id="@+id/myself_myAttention_layout_"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="10dp"
        	android:paddingBottom="10dp"
        	android:layout_marginTop="15dp"
        	android:background="#ffffff">
        	<ImageView 
            	android:id="@+id/myself_myAttention_layout_img"
            	android:layout_width="25dp"
            	android:layout_height="25dp"
            	android:src="@drawable/img_my"
            	android:layout_marginLeft="20dp"
            	android:layout_centerVertical="true"/>
        	<TextView 
            	android:id="@+id/myself_myAttention_layout_text"
            	android:layout_width="wrap_content"
        	 	android:layout_height="wrap_content"
        	    android:textColor="@color/dark_normal"
        	   	android:text="关注的人"
        	    android:textSize="17sp"
        	    android:layout_centerInParent="true"
        	    />
        
    	</RelativeLayout>
    	<View
    	    android:layout_width="match_parent"
    	    android:layout_height="0.5dp"
    	    android:background="@color/gray_light">
    	</View>
    	<RelativeLayout 
        	android:id="@+id/myself_myCollection_layout_"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="10dp"
        	android:paddingBottom="10dp"
        	android:background="#ffffff">
        	<ImageView 
            	android:id="@+id/myself_myCollection_layout_img"
            	android:layout_width="25dp"
            	android:layout_height="25dp"
            	android:src="@drawable/img_my"
            	android:layout_marginLeft="20dp"
            	android:layout_centerVertical="true"/>
        	<TextView 
            	android:id="@+id/myself_myCollection_layout_text"
            	android:layout_width="wrap_content"
        	 	android:layout_height="wrap_content"
        	    android:textColor="@color/dark_normal"
        	   	android:text="我的收藏"
        	    android:textSize="17sp"
        	    android:layout_centerInParent="true"
        	    />
    	</RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/myself_linearlayout2"
        android:layout_below="@id/myself_linearlayout1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    	<RelativeLayout 
        	android:id="@+id/myself_setting_layout_"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="10dp"
        	android:paddingBottom="10dp"
        	android:background="#ffffff">
        	<ImageView 
            	android:id="@+id/myself_setting_layout_img"
            	android:layout_width="25dp"
            	android:layout_height="25dp"
            	android:src="@drawable/img_my"
            	android:layout_marginLeft="20dp"
            	android:layout_centerVertical="true"/>
        	<TextView 
            	android:id="@+id/myself_setting_layout_text"
            	android:layout_width="wrap_content"
        	 	android:layout_height="wrap_content"
        	    android:textColor="@color/dark_normal"
        	   	android:text="个人设置"
        	    android:textSize="17sp"
        	    android:layout_centerInParent="true"
        	    />
    	</RelativeLayout>
        
    </LinearLayout>

	<LinearLayout
		android:id="@+id/myself_Change_user"
		android:layout_below="@id/myself_linearlayout2"
		android:layout_marginTop="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<RelativeLayout
			android:id="@+id/myself_setting_layout_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:background="#ffffff">
			<ImageView
				android:id="@+id/myself_setting_layout_img_"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/img_my"
				android:layout_marginLeft="20dp"
				android:layout_centerVertical="true"/>
			<TextView
				android:id="@+id/myself_Change_User"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/dark_normal"
				android:text="更改账号"
				android:textSize="17sp"
				android:layout_centerInParent="true"
				/>
		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>
